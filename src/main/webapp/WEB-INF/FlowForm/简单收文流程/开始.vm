	/**
	 * 重置
	 * 
	 * @param {}
	 *            formPanel
	 */
	reset : function(panel) {
	    //alert(panel.defId);
		panel.formPanel.getForm().reset();
		Ext.getCmp('archivesRecFilePanel').body.update('');
	},
	/**
	 * 取消
	 * 
	 * @param {}
	 *            window
	 */
	cancel : function(panel) {
		AppUtil.removeTab(topPanel.getId());
	},
	/**
	 * 保存记录
	 */

	save : function(formPanel, panel) {
		Ext.getCmp('ArchivesRecFormVm.status').setValue(0);// 0表示为收文草稿
		var fileId = Ext.getCmp('archivesRecfileIds').getValue();
		if (fileId != '' && fileId != null && fileId != 'undefined') {
			if (formPanel.getForm().isValid()) {
				formPanel.getForm().submit({
							method : 'POST',
							waitMsg : '正在提交数据...',
							success : function(fp, action) {
								Ext.ux.Toast.msg('操作信息', '成功保存信息！');
								AppUtil.removeTab(topPanel.getId());
								var runGrid=Ext.getCmp('ProcessRunGrid');
								if(runGrid!=null){
									runGrid.getStore().reload();
								}
							},
							failure : function(fp, action) {
								Ext.MessageBox.show({
											title : '操作信息',
											msg : '信息保存出错，请联系管理员！',
											buttons : Ext.MessageBox.OK,
											icon : Ext.MessageBox.ERROR
										});
								       AppUtil.removeTab(topPanel.getId());
										var runGrid=Ext.getCmp('ProcessRunGrid');
										if(runGrid!=null){
											runGrid.getStore().reload();
										}
							}
						});
			}
		} else {

			Ext.ux.Toast.msg('操作信息', '请上传公文！');
		}
	},// end of save
	submit : function(formPanel, panel) {
		Ext.getCmp('ArchivesRecFormVm.status').setValue(1);// 1表示为提交收文
		var fileId = Ext.getCmp('archivesRecfileIds').getValue();
		if (fileId != '' && fileId != null && fileId != 'undefined') {
			if (formPanel.getForm().isValid()) {
				formPanel.getForm().submit({
							method : 'POST',
							waitMsg : '正在提交数据...',
							success : function(fp, action) {
							    var archivesId=action.result.archivesId;
							    Ext.getCmp('ArchivesRecFormVm.archivesId').setValue(archivesId);
							    formPanel.getForm().submit({
							        url : __ctxPath + '/flow/saveProcessActivity.do',
									waitMsg : '正在提交流程表单信息...',
									params:{
										defId:panel.defId,
										//runId:this.runId,
										//activityName:this.activityName,
										//启动工作流
										startFlow:true
									},
									method : 'POST',
									success : function(fp, action) {
									    Ext.ux.Toast.msg('操作信息', '保存成功！');
									    AppUtil.removeTab(topPanel.getId());
										var runGrid=Ext.getCmp('ProcessRunGrid');
										if(runGrid!=null){
											runGrid.getStore().reload();
										}
									},
									failure : function(fp, action) {
									    Ext.MessageBox.show({
											title : '操作信息',
											msg : '信息保存出错，请联系管理员！',
											buttons : Ext.MessageBox.OK,
											icon : Ext.MessageBox.ERROR
										});
										AppUtil.removeTab(topPanel.getId());
										var runGrid=Ext.getCmp('ProcessRunGrid');
										if(runGrid!=null){
											runGrid.getStore().reload();
										}
									}
							    });
								
							},
							failure : function(fp, action) {
								Ext.MessageBox.show({
											title : '操作信息',
											msg : '信息保存出错，请联系管理员！',
											buttons : Ext.MessageBox.OK,
											icon : Ext.MessageBox.ERROR
										});
								        AppUtil.removeTab(topPanel.getId());
										var runGrid=Ext.getCmp('ProcessRunGrid');
										if(runGrid!=null){
											runGrid.getStore().reload();
										}
							}
						});
			}
		} else {

			Ext.ux.Toast.msg('操作信息', '请上传公文！');
		}
	},// end of save
