									id : 'ArchivesRecFormVm.handelUIds',
									name : 'signUserIds'
								}, {
									xtype : 'button',
									iconCls:'btn-mail_recipient',
									text : '选择拟办人员',
									handler : function() {
										UserSelector.getView(
												function(id, name) {
													Ext
															.getCmp('ArchivesRecFormVm.handlerUnames')
															.setValue(name);
													Ext
															.getCmp('ArchivesRecFormVm.handelUIds')
															.setValue(id);
												}).show();

									}
								}]

					}, {
						xtype : 'fieldset',
						title : '公文基本信息',
						defaults : {
